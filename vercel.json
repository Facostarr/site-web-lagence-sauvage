{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/:path*.(css|js|png|jpg|jpeg|gif|svg|ico|xml|txt)",
      "destination": "/public/:path*"
    },
    {
      "source": "/:path*.html",
      "destination": "/public/:path*.html"
    },
    {
      "source": "/:path*",
      "destination": "/public/:path*"
    },
    {
      "source": "/",
      "destination": "/public/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
